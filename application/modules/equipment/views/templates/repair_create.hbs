<script id="repair-create-template" type="text/x-handlebars-template">
    {{#this}}
        <div class="modal-body">
            {{#if eq_id}}
                <input type="hidden" name="eq_id" value="{{eq_id}}">
            {{else}}
                <div class="form-group">
                    <label class="col-sm-4 control-label" for="eq_id">Equipment</label>
                    <div class="col-sm-7">
                        <input id="eq_id" name="eq_id" class="m-b select-two" data-select-route="equipment">
                        <span class="help-block" id="eq_id-error"></span>
                    </div>
                </div>
            {{/if}}
            <div class="form-group">
                <label class="col-sm-4 control-label" for="repair_type_id">Type</label>
                <div class="col-sm-7">
                    <input id="repair_type_id" name="repair_type_id" class="m-b select-two"
                           data-select-route="repairTypes">
                    <span class="help-block" id="repair_type_id-error"></span>
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-4 control-label" for="repair_priority">Priority</label>
                <div class="col-sm-7">
                    <select name="repair_priority" class="form-control m-b">
                        {{#each (var "repairPriorities")}}
                            <option value="{{@key}}" {{#eq (cast @key 'int') (cast ../repair_priority 'int')}}
                                    selected="selected" {{/eq}}>
                                {{this}}
                            </option>
                        {{/each}}
                    </select>
                    <span class="help-block" id="service_date_period_type-error"></span>
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-4 control-label" for="repair_description">Description</label>
                <div class="col-sm-7">
                <textarea name="repair_description" class="form-control" rows="3"
                          placeholder="Input your description here"></textarea>
                    <span class="help-block" id="repair_description-error"></span>
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-4 control-label" for="service_description">Estimated labour</label>
                <div class="col-sm-7">
                    <input name="repair_est_hours" type="number" step="0.1" class="form-control"
                           placeholder="est. Hours" value="0">
                    <span class="help-block" id="service_description-error"></span>
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-4 control-label">Equipment can not be used</label>
                <div class="col-sm-7">
                    <label class="switch">
                        <input type="checkbox" name="eq_repair">
                        <span></span>
                    </label>
                    <span class="help-block" id="eq_repair-error"></span>
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-12">
                    <input data-id="{{repair_id}}" data-upload-route="uploadFile"
                           data-delete-route="deleteFile" name="file" type="file"
                           class="file-input" multiple>
                </div>
            </div>
            <div class="col-md-12 feedback">
                <span class="help-block"></span>
            </div>
            <div class="clear"></div>
        </div>
    {{/this}}
</script>
