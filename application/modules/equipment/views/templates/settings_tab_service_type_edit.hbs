<script id="service-type-edit-template" type="text/x-handlebars-template">
    {{#this}}
        <div class="modal-body">
            <div class="form-group">
                <label class="col-sm-4 control-label" for="part_number">Type</label>
                <div class="col-sm-7">
                    <select name="service_type_form" class="form-control m-b">
                        {{#each (var "serviceTypeForms")}}
                            <option value="{{@key}}" {{#eq (cast @key 'int') (cast ../service_type_form 'int')}}
                                    selected="selected" {{/eq}}>
                                {{this}}
                            </option>
                        {{/each}}
                    </select>
                    <span class="help-block" id="service_type_form-error"></span>
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-4 control-label" for="service_type_name">Name</label>
                <div class="col-sm-7">
                    <input class="form-control" type="text" name="service_type_name" value="{{service_type_name}}">
                    <span class="help-block" id="service_type_name-error"></span>
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-4 control-label" for="service_type_description">Description</label>
                <div class="col-sm-7">
                <textarea name="service_type_description" class="form-control" rows="3"
                          placeholder="Input your description here">{{service_type_description}}</textarea>
                    <span class="help-block" id="service_type_description-error"></span>
                </div>
            </div>
            {{#if service_type_id}}
                <input type="hidden" name="service_type_id" value="{{service_type_id}}">
            {{/if}}
            <div class="col-md-12 feedback">
                <span class="help-block"></span>
            </div>
            <div class="clear"></div>
        </div>
    {{/this}}
</script>