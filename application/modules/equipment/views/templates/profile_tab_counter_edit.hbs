<script id="profile-tab-counter-edit-template" type="text/x-handlebars-template">
    {{#this}}
        <div class="modal-body">
            <div class="form-group">
                <label class="col-sm-4 control-label" for="counter_value">Value on day of inspection</label>
                <div class="col-sm-7">
                    <input class="form-control" type="number" step="1" min="0" type="text" name="counter_value"
                           value="{{counter_value}}">
                    <span class="help-block" id="counter_value-error"></span>
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-4 control-label" for="counter_note">Note</label>
                <div class="col-sm-7">
                <textarea name="counter_note" class="form-control" rows="3"
                          placeholder="Input your note here">{{counter_note}}</textarea>
                    <span class="help-block" id="counter_note-error"></span>
                </div>
            </div>
            <div class="form-group m-t-sm">
                <label class="col-sm-4 control-label" for="counter_created_at">Date</label>
                <div class="col-sm-7">
                    <input type="text" class="datepicker form-control text-center" name="counter_date"
                           value="{{counter_date}}" readonly=""
                           style="margin-left: 5px;width: 100px;display: inline-block;height: 20px;">
                    <span class="help-block" id="counter_created_at-error"></span>
                </div>
            </div>
            {{#if counter_id}}
                <input type="hidden" name="counter_id" value="{{counter_id}}">
            {{/if}}
            {{#if user_id}}
                <input type="hidden" name="user_id" value="{{user_id}}">
            {{/if}}
            {{#if eq_id}}
                <input type="hidden" name="eq_id" value="{{eq_id}}">
            {{/if}}
            {{#if repair_id}}
                <input type="hidden" name="repair_id" value="{{repair_id}}">
            {{/if}}
            {{#if service_report_id}}
                <input type="hidden" name="service_report_id" value="{{service_report_id}}">
            {{/if}}
            <div class="col-md-12 feedback">
                <span class="help-block"></span>
            </div>
            <div class="clear"></div>
        </div>
    {{/this}}
</script>